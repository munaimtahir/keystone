## Database (Postgres)
POSTGRES_DB=keystone
POSTGRES_USER=keystone
POSTGRES_PASSWORD=keystone

## Django
DJANGO_SECRET_KEY=dev-secret-change-me
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=*

## Panel/API URLs
## Leave empty to use relative URLs (recommended with Traefik)
VITE_API_BASE=

## Port allocation range for deployed apps
PORT_RANGE_START=9000
PORT_RANGE_END=9999

## Optional: subpath hosting (reverse proxy)
DJANGO_FORCE_SCRIPT_NAME=
VITE_BASE=/

## Authentication bootstrap (only used if no superuser exists)
KEYSTONE_ADMIN_USERNAME=admin
KEYSTONE_ADMIN_PASSWORD=admin
KEYSTONE_ADMIN_EMAIL=admin@example.com

## CORS (frontend origin(s) allowed to call API)
## When using Traefik on port 80, use origins without port numbers
CORS_ALLOWED_ORIGINS=http://localhost,http://127.0.0.1

## Optional: stable encryption key for encrypted fields (Fernet key)
## If empty, derives from DJANGO_SECRET_KEY.
KEYSTONE_FERNET_KEY=

## Reserved / future use
RUNNER_SHARED_TOKEN=

## Debug logging (optional)
## Set to true to enable file-based debug logging to /app/.cursor/debug.log
## Disabled by default to avoid any potential CORS/network issues
ENABLE_DEBUG_LOGGING=false


